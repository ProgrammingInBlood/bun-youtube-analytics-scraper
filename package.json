{
  "name": "youtube-chat-multi-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch index.ts",
    "start": "NODE_ENV=production bun run dist/index.js",
    "cleanup": "find . -name 'screenshots' -type d -exec rm -rf {} +",
    "build": "bun build --target bun --minify --outdir ./dist index.ts",
    "build:binary": "bun build --compile --minify --target bun --outfile server index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "elysia": "^0.8.9",
    "puppeteer": "^21.6.1",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "bun-types": "latest"
  }
} 